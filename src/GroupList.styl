@require '../node_modules/tingle-style/src/var'

border-style = 1px solid #E0E0E1

.tGroupList
  margin-bottom 34px
  &:first-child
    margin-top 34px

.tGroupListHeader
  line-height 1
  font-size 14px
  padding-left 15px
  padding-right 15px
  margin-bottom 10px

.tGroupListBody
  background-color #fff
  border-bottom border-style
  border-top border-style

.tGroupListItem
  padding-left 15px
  &:last-child
    .tGroupListItemInner
      border-bottom none

.tGroupListItemInner
  position relative
  min-height 44px
  display flex
  align-items center
  border-bottom border-style

.hairline
  .tGroupListBody
    border-top-width 0.5px
    border-bottom-width 0.5px
  .tGroupListItem
    border-bottom-width 0.5px